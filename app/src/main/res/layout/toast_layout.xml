<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/toast_lo"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/main_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/toast_img"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/toast_confirm"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/toast_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일정이 삭제되었습니다"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="@font/npsfont_regula"
                android:maxWidth="300dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>