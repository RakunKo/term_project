<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginVertical="50dp"
   android:layout_marginHorizontal="40dp">

    <ImageButton
        android:id="@+id/profile_edit_back_btn"
        android:layout_width="22dp"
        android:layout_height="28dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_back_ios"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_edit_name_cv"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_back_btn"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/profile_edit_name_et"
            android:background="@drawable/profile_edit_name_ic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_edit_introduce_cv"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_name_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/profile_edit_introduce_et"
            android:background="@drawable/profile_edit_introduce_ic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <ImageButton
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_edit_complete_ib"
        android:src="@drawable/profile_edit_complete_ic"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_introduce_cv"/>

</androidx.constraintlayout.widget.ConstraintLayout>